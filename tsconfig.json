{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmit": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "lib": [
      "ES2022"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "index.js",
    "lib/**/*"
  ]
}